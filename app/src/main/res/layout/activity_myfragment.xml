<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:umadsdk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/photo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_drawer" />
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center|center_vertical"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:clickable="true"
            android:textColor="#363636"
            android:singleLine="true"
            android:text="空空"
            android:textSize="18sp" />
        <LinearLayout
            android:id="@+id/registerpart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
            <!--&lt;!&ndash; 邮箱 &ndash;&gt;
            <TextView
                android:id="@+id/emailaddr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:paddingTop="10dp"
                android:textColor="#363636"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="18dp"
                android:enabled="false"
                android:hint="@string/email"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:text="tzjsmile@qq.com"
                android:textSize="18sp" />-->

            <TextView
                android:id="@+id/updatetype"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#363636"
                android:clickable="true"
                android:drawableLeft="@drawable/typeplus"
                android:drawablePadding="18dp"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:paddingBottom="8dp"
                android:text="设置任务"
                android:paddingTop="10dp"
                android:textSize="18sp" />
            <!-- 邮箱 -->

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#363636"
                android:clickable="true"
                android:drawableLeft="@drawable/descpic"
                android:drawablePadding="22dp"
                android:paddingLeft="27dp"
                android:singleLine="true"
                android:paddingBottom="8dp"
                android:paddingTop="10dp"
                android:text="使用说明"
                android:textSize="18sp" />
            <!-- 邮箱 -->

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#363636"
                android:clickable="true"
                android:drawableLeft="@drawable/aboutpic"
                android:drawablePadding="18dp"
                android:paddingLeft="22dp"
                android:singleLine="true"
                android:paddingBottom="8dp"
                android:paddingTop="10dp"
                android:text="关于空空"
                android:textSize="18sp" />
            <!-- 邮箱 -->
            <TextView
                android:id="@+id/updatepwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:textColor="#363636"
                android:drawableLeft="@drawable/pwdmy"
                android:drawablePadding="22dp"
                android:paddingLeft="23dp"
                android:clickable="true"
                android:singleLine="true"
                android:paddingBottom="8dp"
                android:text="修改密码"
                android:paddingTop="10dp"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/dynamic"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#363636"
                android:clickable="true"
                android:drawableLeft="@drawable/dynamic"
                android:drawablePadding="18dp"
                android:paddingLeft="21dp"
                android:singleLine="true"
                android:paddingBottom="8dp"
                android:text="设置动画"
                android:paddingTop="10dp"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/logouttv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="6dp"
                android:textColor="#363636"
                android:drawableLeft="@drawable/logoutpic"
                android:drawablePadding="22dp"
                android:paddingLeft="20dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:singleLine="true"
                android:text="注销程序"
                android:paddingTop="10dp"
                android:textSize="18sp" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btn_show_spot"
            android:layout_marginTop="12dp"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:text="也许你会感兴趣"
            android:visibility="visible"
            />
    </LinearLayout>

</ScrollView>