<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/ic_drawer" />
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center|center_vertical"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:enabled="false"
            android:textColor="#000000"
            android:singleLine="true"
            android:text="空空"
            android:textSize="18sp" />
        <LinearLayout
            android:id="@+id/registerpart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >
           <!-- <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="#333333" />-->
            <!-- 邮箱 -->
            <TextView
                android:id="@+id/emailaddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:background="@null"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="18dp"
                android:enabled="false"
                android:hint="@string/email"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:text="tzjsmile@qq.com"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="#dddddd" />

            <TextView
                android:id="@+id/updatetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:clickable="true"
                android:background="@null"
                android:drawableLeft="@drawable/tasktype"
                android:drawablePadding="18dp"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:text="设置任务类型"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="#dddddd" />
            <!-- 邮箱 -->

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:background="@null"
                android:clickable="true"
                android:drawableLeft="@drawable/description"
                android:drawablePadding="18dp"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:text="使用说明"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="#dddddd" />
            <!-- 邮箱 -->

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:clickable="true"
                android:background="@null"
                android:drawableLeft="@drawable/about"
                android:drawablePadding="18dp"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:text="关于app"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="#dddddd" />
            <!-- 邮箱 -->

            <TextView
                android:id="@+id/logouttv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:background="@null"
                android:drawableLeft="@drawable/logoutimage"
                android:drawablePadding="18dp"
                android:paddingLeft="25dp"
                android:clickable="true"
                android:singleLine="true"
                android:text="注销"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="#dddddd" />

            <!--<Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:text="注销"
                android:textColor="#ffffff"
                android:textSize="20sp" />-->
        </LinearLayout>
    </LinearLayout>

</ScrollView>