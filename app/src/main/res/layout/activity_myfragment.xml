<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_drawer" />
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center|center_vertical"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:clickable="true"
            android:textColor="#363636"
            android:singleLine="true"
            android:text="空空"
            android:textSize="18sp" />
        <LinearLayout
            android:id="@+id/registerpart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >
            <!--&lt;!&ndash; 邮箱 &ndash;&gt;
            <TextView
                android:id="@+id/emailaddr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:paddingTop="10dp"
                android:textColor="#363636"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="18dp"
                android:enabled="false"
                android:hint="@string/email"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:text="tzjsmile@qq.com"
                android:textSize="18sp" />-->

            <TextView
                android:id="@+id/updatetype"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#363636"
                android:clickable="true"
                android:drawableLeft="@drawable/typeplus"
                android:drawablePadding="18dp"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:text="设置任务类型"
                android:paddingTop="10dp"
                android:textSize="18sp" />
            <!-- 邮箱 -->

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#363636"
                android:clickable="true"
                android:drawableLeft="@drawable/descpic"
                android:drawablePadding="22dp"
                android:paddingLeft="27dp"
                android:singleLine="true"
                android:paddingTop="10dp"
                android:text="使用说明"
                android:textSize="18sp" />
            <!-- 邮箱 -->

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#363636"
                android:clickable="true"
                android:drawableLeft="@drawable/aboutpic"
                android:drawablePadding="18dp"
                android:paddingLeft="22dp"
                android:singleLine="true"
                android:paddingTop="10dp"
                android:text="关于空空清单"
                android:textSize="18sp" />
            <!-- 邮箱 -->

            <TextView
                android:id="@+id/logouttv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:background="@drawable/side"
                android:layout_marginBottom="55dp"
                android:layout_marginTop="6dp"
                android:textColor="#363636"
                android:drawableLeft="@drawable/logoutpic"
                android:drawablePadding="22dp"
                android:paddingLeft="25dp"
                android:clickable="true"
                android:singleLine="true"
                android:text="注销"
                android:paddingTop="10dp"
                android:textSize="18sp" />

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="#dddddd" />-->

            <!--<Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:text="注销"
                android:textColor="#ffffff"
                android:textSize="20sp" />-->
        </LinearLayout>
    </LinearLayout>

</ScrollView>